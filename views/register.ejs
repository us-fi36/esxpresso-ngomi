<!DOCTYPE html>
<html>
<%- include('partials/head') %>
<body>
    <%- include('partials/header') %>

    <h2>Registrierung</h2>

    <form action="/register" method="POST">
        <label for="username">Benutzername:</label>
        <input type="text" id="username" name="username" value="<%= locals.username ? username : '' %>" required><br><br>

        <label for="name">Name:</label>
        <input type="text" id="name" name="name" value="<%= locals.name ? name : '' %>" required><br><br>

        <label for="email">Email:</label>
        <input type="email" id="email" name="email" value="<%= locals.email ? email : '' %>" required><br><br>

        <label for="password">Passwort:</label>
        <input type="password" id="password" name="password" required><br><br>

        <label for="password">Passwortbest√§tigung:</label>
        <input type="password" id="password_check" name="password_check" required><br><br>

        <button type="submit">Registrieren</button>
    </form>
    <%- include('partials/footer') %>
</body>
</html>
